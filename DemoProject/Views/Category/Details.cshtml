@model DemoProject.Models.CategoryDisplayModel
@{
    ViewBag.Title = "Details";
}
<h1 class="pagetittle">
    @Model.categoryname Listing
</h1>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
<div class="datblwrapper listingtable scrollbar">
    <div class="tab-content current" id="tab-1">
        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Sr No.</th>
                    <th>Product Name</th>
                </tr>
            </thead>
            <tbody>

                @if (Model.productlist!= null && Model.productlist.Count()>0)
                {
                    int i = 1;
                    foreach (var x in Model.productlist)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@x.ProductName</td>
                        </tr>
                        i = i + 1;
                    }
                }
            </tbody>
        </table>
    </div>
</div>

